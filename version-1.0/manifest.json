{
    "manifest_version": 2,
    "name": "Später Senden Button",
    "description": "A basic Hello World example extension!",
    "version": "1.0",
    "author": "That Developer Guy",
    "browser_specific_settings": {
        "gecko": {
            "id": "send_later123@extension.com",
            "strict_min_version": "78.0"
        }
    },
    "permissions": [
        "compose",
        "compose.send"
    ],
    "compose_action": {
        "default_title": "Später Senden",
        "default_icon": "send2.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": {
        "64": "send2.png",
        "32": "send2.png",
        "16": "send2.png"
    }
}